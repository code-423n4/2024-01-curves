{
  "name": "@curves/contracts",
  "private": true,
  "packageManager": "yarn@4.0.0-rc.51",
  "version": "0.0.0",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:local": "npx cross-env EXECUTE_PROGRAMMATICALLY=true yarn hardhat run scripts/deploy-local.ts --network localhost",
    "dev": "npx hardhat node",
    "entr-warning": "echo You need to install `entr` to run this command",
    "generate:abi": "rm -fr ./contracts/abi/* && cp -R ./artifacts/contracts/**/*.json ./contracts/abi/ && cp -R ./artifacts/contracts/**/**/*.json ./contracts/abi/ && rm ./contracts/abi/*dbg*",
    "generate:typechain": "rm -rf ./contracts/types && typechain --target ethers-v5 --out-dir ./contracts/types ./contracts/abi/**/*.json",
    "lint": "npx eslint . --ext .js,.ts",
    "lint:fix": "npx eslint . --ext .js,.ts,.json --fix",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:watch": "yarn entr-warning && find contracts test -iname '*.sol' -o -iname '*.spec.*' -o -iname '*.test.*' | entr -cnr npx hardhat test",
    "tsc:watch": "tsc --watch"
  },
  "devDependencies": {
    "@ethereumjs/vm": "^5.5.2",
    "@ethersproject/abi": "^5.4.3",
    "@ethersproject/bytes": "^5.4.3",
    "@ethersproject/contracts": "^5.4.3",
    "@ethersproject/providers": "^5.4.3",
    "@ethersproject/strings": "^5.4.3",
    "@ethersproject/units": "^5.4.3",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "3.1.7",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.7.0-rc.0",
    "@typechain/ethers-v5": "9.0.0",
    "@typechain/hardhat": "4.0.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.0.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chai": "^4.3.6",
    "chai-bignumber": "^3.0.0",
    "dotenv": "12.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "5.7.2",
    "hardhat": "^2.18.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-ethernal": "=3.2.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.4",
    "is-core-module": "^2.5.0",
    "kind-of": "^6.0.3",
    "merkletreejs": "^0.3.11",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "solhint": "3.3.6",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.12.0"
  }
}